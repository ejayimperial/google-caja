<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="cajaBuilder"
         name="Caja Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="com.google.caja.ecajalipse.builder.CajaBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="cajaNature"
         name="Caja Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.google.caja.ecajalipse.builder.CajaNature">
         </run>
      </runtime>
      <builder
            id="caja_builder.cajaBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="caja_builder.contribution1">
         <action
               label="Add/Remove Caja Nature"
               class="com.google.caja.ecajalipse.builder.ToggleCajaNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="caja_builder.addRemoveNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="syntaxErrorProblem"
         name="Caja Syntax Error Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
